<!DOCTYPE html>
<html lang="sk">
<head>
  <meta charset="UTF-8">
  <title>Tvoj API Token</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <!-- Navigácia -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">AIR CHECK</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/users/dashboard">Domov</a></li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="apiDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              API
            </a>
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="apiDropdown">
              <li><a class="dropdown-item" href="/users/api-token">Môj API token</a></li>
              <li><a class="dropdown-item" href="/api-docs">API dokumentácia</a></li>
            </ul>
          </li>
          <li class="nav-item"><a class="nav-link" href="/users/favorites">Obľúbené lokality</a></li>
          <li class="nav-item"><a class="nav-link" href="/users/profile">Profil</a></li>
          <li class="nav-item"><a class="nav-link" href="/users/logout">Odhlásiť</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <h1 class="mb-4">Tvoj API Token</h1>

    <pre id="token" class="bg-light p-3 border rounded"><%= token %></pre>

    <p class="mt-3">Tento token bol automaticky uložený do tvojho prehliadača.</p>

    <button id="back-to-dashboard" class="btn btn-secondary mt-3">← Späť na dashboard</button>
  </div>

  <!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>  -->

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tokenElement = document.getElementById('token');
      const backButton = document.getElementById('back-to-dashboard');

      if (!tokenElement || !backButton) {
        console.error('Elementy token alebo button neboli nájdené.');
        return;
      }

      const token = tokenElement.textContent.trim();

      if (token) {
        localStorage.setItem('apiAccessToken', token);
        console.log('Token uložený do localStorage.');
      } else {
        console.warn('Token nie je dostupný.');
      }

      backButton.addEventListener('click', () => {
        console.log('Kliknuté na späť na dashboard.');
        window.location.href = '/users/dashboard';
      });
    });
  </script>
</body>
</html>
